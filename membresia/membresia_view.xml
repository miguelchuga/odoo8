<?xml version="1.0"?>
<openerp>
	<data>

		<!--PROFESION-->

		<record model="ir.ui.view" id="view_profesiones_tree">
			<field name="name">Profesiones</field>
			<field name="model">membresia.profesiones</field>
			<field name="arch" type="xml">
				<tree string="Profesiones">					
					<field name="name"/>
				</tree>
			</field>
		</record>

		<record model="ir.ui.view" id="view_profesiones_form">
			<field name="name">Profesiones</field>
			<field name="model">membresia.profesiones</field>
			<field name="arch" type="xml">
				<form string="Profesiones">
					<group>
						<field name="name"></field>
					</group>
				</form>
			</field>
		</record>

		<!--ACTION_MEMBRESIA-->
		<record id="profesiones_action" model="ir.actions.act_window">
			<field name="res_model">membresia.profesiones</field>
			<field name="view_type">form</field>
			<field name="name">Profesiones</field>
			<field name="view_mode">tree,form</field>
		</record>
		
		<menuitem name="Membresia" id="main_menu"/>
		<menuitem name="Membresia" parent="main_menu" id="membresia_menu"/>
		<menuitem name="Profesion" parent="membresia_menu" id="profesion_menu"
		action='profesiones_action'/>

		<!--PRIVILEGIOS-->

		<record model="ir.ui.view" id="view_privilegios_tree">
			<field name="name">Privilegios</field>
			<field name="model">membresia.privilegios</field>
			<field name="arch" type="xml">
				<tree string="Privilegios">					
					<field name="name"/>
					<field name="description"/>
				</tree>
			</field>
		</record>

		<record model="ir.ui.view" id="view_privilegios_form">
			<field name="name">Privilegios</field>
			<field name="model">membresia.privilegios</field>
			<field name="arch" type="xml">
				<form string="Privilegios">
					<group>
						<field name="name"></field>
					</group>
					<notebook>
						<page string="Desciption">
							<field name="description"></field>
						</page>
					</notebook>
					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers"/>
						<field name="message_ids" widget="mail_thread"/>
					</div>
				</form>
			</field>
		</record>

		<!--ACTION_PRIVILEGIOS-->
		<record id="privilegios_action" model="ir.actions.act_window">
			<field name="res_model">membresia.privilegios</field>
			<field name="view_type">form</field>
			<field name="name">Privilegios</field>
			<field name="view_mode">tree,form</field>
		</record>	
		<menuitem name="Privilegios" parent="membresia_menu" id="privilegios_menu"
		action='privilegios_action'/>


		<!-- HISTORIAL DE PRIVILEGIOS A LOS QUE PERTENECE UN MIEMBRO-->
		<record model="ir.ui.view" id="view_historial_privilegios_tree">
			<field name="name">Historial de Privilegios</field>
			<field name="model">membresia.historial_privilegios</field>
			<field name="arch" type="xml">
				<tree string="Historial de Privilegios">					
					<field name="miembro_id"/>
					<field name="fecha_inicio"/>
					<field name="fecha_final"/>
					<field name="privilegio_id"/>
				</tree>
			</field>
		</record>

		<record model="ir.ui.view" id="view_historial_privilegios_form">
			<field name="name">Historial de Privilegios</field>
			<field name="model">membresia.historial_privilegios</field>
			<field name="arch" type="xml">
				<form string="Historial Privilegios">
					<group>
   					    <field name="miembro_id"/>
					    <field name="fecha_inicio"/>
					    <field name="fecha_final"/>
					    <field name="privilegio_id"/>
					</group>
					<notebook>
						<page string="Desciption">
							<field name="description"></field>
						</page>
					</notebook>
				</form>
			</field>
		</record>
		<!--ACTION_PRIVILEGIOS-->
		<record id="historial_privilegios_action" model="ir.actions.act_window">
			<field name="res_model">membresia.historial_privilegios</field>
			<field name="view_type">form</field>
			<field name="name">Historial Privilegios</field>
			<field name="view_mode">tree,form</field>
		</record>	
		<menuitem name="Historial Privilegios" parent="membresia_menu" id="historial_privilegios_menu"
		action='historial_privilegios_action'/>

		<!--   -->
	</data>
</openerp>
